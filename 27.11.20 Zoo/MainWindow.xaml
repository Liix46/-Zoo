<Window x:Class="_27._11._20_Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27._11._20_Zoo"
        mc:Ignorable="d"
        Title="Wildscapes" MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        Loaded="MainWindow_Loaded" Closing="MainWindow_Closing" Closed="MainWindow_Closed" 
        Height="{Binding SystemParameters.PrimaryScreenHeight}" 
        Width="{Binding SystemParameters.PrimaryScreenWidth}" Icon="main icon.png">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Panel.ZIndex" Value="100"/>
        </Style>
    </Window.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <Grid>

            <Grid.Background>
                <ImageBrush ImageSource="backgroun1d.jpg" Stretch="None" AlignmentX="Left"/>
            </Grid.Background>

            <Button Margin="130,265,0,143" RenderTransformOrigin="0.604,-1.1">
                <Image Source="crashBuild.png" Margin="-61,7,-57,-107" OpacityMask="Black"  />
            </Button>
        </Grid>
    </ScrollViewer>
</Window>
