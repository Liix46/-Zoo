            </Button>
            <Button Margin="1505,850,940.6,70" x:Name="button6" >
                <Image Style="{StaticResource CrashImage}"/>
            </Button>
            <Button Margin="1175,430,1270.6,490" x:Name="button7" >
                <Image Style="{StaticResource CrashImage}"/>
            </Button>
            <Button Margin="385,300,2060.6,620" x:Name="button8" >
                <Image Style="{StaticResource CrashImage}"/>
            </Button>
            <Button Margin="1075,285,1370.6,635" x:Name="button9" >
