<Window x:Class="_27._11._20_Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27._11._20_Zoo"
        mc:Ignorable="d"
        Title="Wildscapes" MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        Loaded="MainWindow_Loaded" Closing="MainWindow_Closing" Closed="MainWindow_Closed" 
        Height="1036.4" 
        Width="1813.2" Icon="main icon.png">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="70"/>

            <Setter Property="Panel.ZIndex" Value="100"/>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Mouse.MouseMove">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color" To="#00000000" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="backgroun1d.jpg" Stretch="None" AlignmentX="Left"/>
            </Grid.Background>

            <Button Margin="390,520,1319.6,400.4" RenderTransformOrigin="0.604,-1.1" Background="{x:Null}">
                <Image Source="crashBuild2.png" Height="70" Width="100" OpacityMask="Black">
                </Image>
            </Button>
        </Grid>
    </ScrollViewer>
</Window>
