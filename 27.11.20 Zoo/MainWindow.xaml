                            <Border Height="150" Width="200" Background="White">
                            </Border>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button Margin="1075,285,1370.6,635" x:Name="aviaryBtn9" Click="AviaryBtn_Click" MouseDoubleClick="DoubleClickAviary">
