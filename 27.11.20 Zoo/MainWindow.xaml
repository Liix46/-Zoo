                    </ComboBoxItem>
                    <ComboBoxItem Height="50" Width="60" Selected="ComboBoxAviary_Click">
                        <ComboBoxItem.Content>
                            <Image Source="Locations\scaur.png" VerticalAlignment="Center"></Image>
