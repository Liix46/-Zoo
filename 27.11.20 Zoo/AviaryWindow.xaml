<Window x:Class="_27._11._20_Zoo.AviaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27._11._20_Zoo"
        mc:Ignorable="d"
        Title="AviaryWindow" Height="350" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Jungle_background.jpg"/>
        </Grid.Background>
        <ListBox Grid.ColumnSpan="3" Grid.Column="1" Background="#FF02150E" Foreground="White" FontSize="25" FontFamily="Castellar" FontStyle="Italic">
            <ListBoxItem Margin="10,0,10,0" Padding="0,10,0,10" MouseDoubleClick="ListBoxItem_MouseDoubleClick_BuyAnimals">
                <StackPanel Orientation="Horizontal">
                    <Image Source="MainIcon.png" Width="30" Height="30"/>
                    <TextBlock Margin="20,0,0,0">Купить животное</TextBlock>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
    </Grid>
</Window>
