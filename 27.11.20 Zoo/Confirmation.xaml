<Window x:Class="_27._11._20_Zoo.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_27._11._20_Zoo"
        mc:Ignorable="d"
        Title="Confirmation" MaxHeight="110" MaxWidth="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2" Margin="55,0,0,0">
            Are you sure to exit the game?
        </Label>
        <Button x:Name="yesButton" Content="Yes" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"  Width="75" Click="yesButton_Click"/>
        <Button x:Name="noButton" Content="No" HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,0,0" Width="75" Click="noButton_Click"/>
    </Grid>
</Window>
